<% include ../partials/header %>

<div class="container d-flex justify-content-center align-items-center flex-column">
  <div class="text-center">
    <h1>Edit <%= campground.name %></h1>
  </div>
  <form class="mt-2 mb-5" action="/campgrounds/<%= campground._id %>/?_method=PUT" method="post" enctype="multipart/form-data">
    <label for="campground[name]">Campground Name:</label>
    <input class="form-control mb-3" type="text" value="<%= campground.name %>" name="campground[name]">
    <label for="campground[name]">Campground Price:</label>
    <input class="form-control mb-3" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01">
    <label for="campground[name]">Campground Image:</label>
    <input class="form-control mb-3" type="file" name="image" accept="image/*">
    <label for="campground[name]">Campground Description:</label>
    <input class="form-control mb-3" type="text" value="<%= campground.description %>" name="campground[description]">
    <label for="location">Campground Location:</label>
    <input id="location" class="form-control mb-5" type="text" name="campground[location]"  placeholder="Location">
    <button class="btn btn-lg btn-success btn-block">Submit!</button>
    <a href="/campgrounds">Go Back</a>
  </form>
</div>

<% include ../partials/footer %>
