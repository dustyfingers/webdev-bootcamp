<% include ../partials/header %>

<div class="container d-flex justify-content-center align-items-center flex-column">
  <div class="text-center">
    <h1>Edit <%= campground.name %></h1>
  </div>
  <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="post" enctype="multipart/form-data">
      <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
      <input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01">
      <input class="form-control" type="file" name="image" accept="image/*">
      <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]">
      <label for="location">Location</label>
      <input id="location" class="form-control" type="text" name="campground[location]"  placeholder="Location">
      <button class="btn btn-lg btn-success btn-block">Submit!</button>
    <a href="/campgrounds">Go Back</a>
  </form>
</div>

<% include ../partials/footer %>
