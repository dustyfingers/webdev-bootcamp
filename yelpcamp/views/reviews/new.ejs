<% include ../partials/header %>

<div class="container d-flex justify-content-center align-items-center flex-column w-100">
  <h1>New Review for <%= campground.name %></h1>
  <form class="mt-2 mb-5" action="/campgrounds/<%= campground._id %>/reviews" method="POST">
    <div class="form-group">
      <label for="rating">Leave a rating:</label>
      <fieldset class="starability-basic form-group" id="rating">
        <div>
          <input id="first-rate5" type="radio" name="review[rating]" value="5" checked />
          <label for="first-rate5" title="5 stars - Amazing">
            <%- '<span class="fa fa-star checked"></span>'.repeat(5) %>
          </label>
        </div>
        <div>
          <input id="first-rate4" type="radio" name="review[rating]" value="4" checked />
          <label for="first-rate4" title="4 stars - Very Good">
            <%- '<span class="fa fa-star checked"></span>'.repeat(4) %>
          </label>
        </div>
        <div>
          <input id="first-rate3" type="radio" name="review[rating]" value="3" checked />
          <label for="first-rate3" title="3 stars - Average">
            <%- '<span class="fa fa-star checked"></span>'.repeat(3) %>
          </label>
        </div>
        <div>
          <input id="first-rate2" type="radio" name="review[rating]" value="2" checked />
          <label for="first-rate2" title="2 stars - Not Good">
            <%- '<span class="fa fa-star checked"></span>'.repeat(2) %>
          </label>
        </div>
        <div>
          <input id="first-rate1" type="radio" name="review[rating]" value="1" checked />
          <label for="first-rate1" title="1 star - Terrible">
            <%- '<span class="fa fa-star checked"></span>'.repeat(1) %>
          </label>
        </div>
      </fieldset>
    </div>
    <textarea class="form-control mb-5" type="text" name="review[text]" placeholder="Submit a review for this campground..." rows="5" cols="80"></textarea>
    <button class="btn btn-success btn-block">Submit Review</button>
    <a href="/campgrounds/<%= campground._id %>">Go Back</a>
  </form>
</div>

<% include ../partials/footer %>
