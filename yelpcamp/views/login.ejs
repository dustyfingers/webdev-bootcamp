<% include ./partials/header %>

<div class="container d-flex justify-content-center align-items-center flex-column mx-auto">
  <div class="text-center">
    <h1>Log In</h1>
  </div>
  <form class="mt-2" action="/login" method="post">
    <label for="username">Username:</label>
    <input id="usernameInput" class="form-control mb-3" type="text" name="username" placeholder="username" required autofocus>
    <label for="password">Password:</label>
    <input id="passwordInput" class="form-control mb-5" type="password" name="password" placeholder="password" required>
    <button class="form-control btn btn-lg btn-success btn-block" type="submit" name="button">Log In</button>
    <a href="/campgrounds">Go Back</a>
    <a class="pull-right text-muted" href="/forgot">forgot password?</a>
  </form>
</div>

<% include ./partials/footer %>
